@model List<CapaEntidad.clsVenta>

@{
    ViewData["Title"] = "Reporte de Ventas";
}

<h2>Reporte de Ventas</h2>

<!-- Tabla con Bootstrap -->
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Número de Documento</th>
            <th scope="col">Razón Social</th>
            <th scope="col">Total</th>
            <th scope="col">Fecha de Registro</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var venta in Model)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@venta.NumeroDocumento</td>
                    <td>@venta.RazonSocial</td>
                    <td>@venta.Total.ToString("C")</td> <!-- Formato de moneda -->
                    <td>@venta.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td> <!-- Formato de fecha y hora -->
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No se encontraron ventas</td>
            </tr>
        }
    </tbody>
</table>
